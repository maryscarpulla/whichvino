<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Wine name</th>
        <th>Year</th>
        <th>Price</th>
        <th>Varietal</th>
        <th>Winery</th>
        <th>Actions</th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.wine_name %></td>
        <td><%= wine.year %></td>
        <td><%= wine.price %></td>
        <td>
          <% if wine.varietal.present? %>
            <a href="/varietals/<%= wine.varietal.id %>">
              <%= wine.varietal.varietal_name %>
            </a>
          <% end %>
        </td>
        <td><%= wine.winery %></td>
        <td>
          <a href="/wines/<%= wine.id %>" class="btn btn-primary">Show</a>
          <a href="/wines/<%= wine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_wine/<%= wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @wines, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
