<div class="page-header">
  <h3>Varietal #<%= @varietal.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Varietal name</dt>
      <dd><%= @varietal.varietal_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/varietals" class="btn btn-primary">
        Back
      </a>
      <a href="/varietals/<%= @varietal.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_varietal/<%= @varietal.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Varietal has many wines -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Wines
      </li>

      <% @varietal.wines.each do |wine| %>
        <li class="list-group-item">
          <a href="/wines/<%= wine.id %>">
            <%= wine.wine_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/wines/<%= wine.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/wines/<%= wine.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_wine/<%= wine.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_wine" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for wine_name -->
      <div class="form-group">
        <label for="wine_name" class="control-label">
          Wine name
        </label>

        <input type="text" id="wine_name" name="wine_name" placeholder="Wine name" class="form-control" value="">
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="">
      </div>

      <!-- Label and input for varietal_id -->
      <input type="hidden" name="varietal_id" value="<%= @varietal.id %>">

      <!-- Label and input for winery -->
      <div class="form-group">
        <label for="winery" class="control-label">
          Winery
        </label>

        <input type="text" id="winery" name="winery" placeholder="Winery" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Wine
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
