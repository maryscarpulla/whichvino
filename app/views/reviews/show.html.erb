<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Stars</dt>
      <dd><%= @review.stars %></dd>

      <dt>Review full text</dt>
      <dd><%= @review.review_full_text %></dd>

      <dt>User</dt>
      <dd>
        <% if @review.user.present? %>
          <a href="/users/<%= @review.user_id %>">
            <%= @review.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Wine</dt>
      <dd>
        <% if @review.wine.present? %>
          <a href="/wines/<%= @review.wine_id %>">
            <%= @review.wine.wine_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @review.user %>
        <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
