<div class="page-header">
  <h1>
    Tasting note tags
    <a href="/tasting_note_tags/new" class="btn btn-lg btn-success">New Tasting note tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tasting note name</th>
        <th>Actions</th>
      </tr>

      <% @tasting_note_tags.each do |tasting_note_tag| %>
      <tr>
        <td>
          <% if tasting_note_tag.tasting_note.present? %>
            <a href="/wines/<%= tasting_note_tag.tasting_note.id %>">
              <%= tasting_note_tag.tasting_note.wine_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/tasting_note_tags/<%= tasting_note_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/tasting_note_tags/<%= tasting_note_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tasting_note_tag/<%= tasting_note_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tasting_note_tags, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
